{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "lib": ["esnext"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {"@babel/core": ["types/base-core"]},
    "typeRoots": ["types", "node_modules/@types"],
    // "resolveJsonModule": true
  },
  "include": ["src"]
}